<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="XamQuiz.Pages.ResetPasswordPopup"
       xmlns:extension="clr-namespace:XamQuiz.Helpers"
       VerticalOptions="Center"
       Visual="Material"
       HeightRequest="200"
       WidthRequest="280"
       IsClippedToBounds="true"
       BackgroundColor="#e47f5d"
       HorizontalOptions="Center">
    <Grid>
<!--        <Image Source="{extension:ImageResource XamQuiz.Resources.bkgnd.jpg}" 
               Grid.RowSpan="3"
               Aspect="Fill"/>-->
        <Label Text="Reset password" x:Name="titleLbl" 
               TextColor="White"
               FontSize="Large" />
        <Entry Placeholder="Email" Grid.Row="1" 
               PlaceholderColor="White"/>
        <Button Text="send" Clicked="Handle_Clicked" 
                TextColor="White"
                BackgroundColor="Red"
                Opacity=".8"
                VerticalOptions="End" Grid.Row="2" />
    </Grid>
</Frame>